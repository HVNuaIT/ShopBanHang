@model ShopBanHang.Models.LienHe

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <style>
        .red {
            color: red;
        }
    </style>
    <title>Liên hệ</title>
</head>
<body>
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <h1 style="color:red">THÔNG TIN LIÊN HỆ</h1>
                    <p>Công ty trách nhiệm hữu hạn 1 thành viên Phương Nam Education</p>
                    <p>Địa Chỉ : Ấp kinh 10B thị trấn tân hiệp huyện tân hiệp Kiên Giang</p>
                    <p>Số Điện Thoại : 0349889594  </p>

                    <h2 style="color:brown">GỬI THÔNG TIN CHO SHOP </h2>
                    @using (Html.BeginForm("Index", "EmailSetup", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <hr />
                        <table>
                            <tr>
                                <td>
                                    Tên Khách Hàng:
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.TenKhachHang)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Email:
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.Email)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Số Điện Thoại Liên Hệ :
                                </td>
                                <td>@Html.TextBoxFor(model => model.SDT)</td>
                            </tr>


                            <tr>
                                <td>
                                    Lời nhắn :
                                </td>
                                <td>@Html.TextAreaFor(model => model.LoiNhan, new { rows = "15", cols = "20" })</td>
                            </tr>

                           
                            <tr align="center">
                                <td>
                                    <input type="submit" value="GỬI" size="100" style="right:auto;left:auto;color:red" />
                                </td>
                                <td></td>
                            </tr>

                        </table>
                        <br />
                        <span style="color:green">@ViewBag.Message</span>

                    }

                </div>

                <div class="col-md-6">
                    <h1>Bản đồ  </h1>
                    <div id="map" style="width:500px;height:500px;">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62846.665686550055!2d105.26495498132054!3d10.10591214317334!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a0a4f17627967f%3A0x3c509de9ba2a6189!2zdHQuIFTDom4gSGnhu4dwLCBUw6JuIEjhu4vDqnAsIEtpw6puIEdpYW5nLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1665908775388!5m2!1svi!2s"
                                width="500" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>

            </div>


        </div>
    </div>
</body>

</html>
