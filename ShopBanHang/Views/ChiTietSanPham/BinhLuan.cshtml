@model List<ShopBanHang.Models.BinhLuan>
@{
    ViewBag.Title = "BinhLuan";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@ViewBag.Mess</h2>

<div class="mt-2">
    <h5 class="mb-4">Gửi ý kiến bình luận tại đây</h5>

    @using (Html.BeginForm("BinhLuan", "ChiTietSanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form>
            <!-- Rating -->
            <div>
                <select name="sao" id="ddlRate" class="form-select  js-choice">
                    <option value="5" selected="">★★★★★ (5/5)</option>
                    <option value="4">★★★★☆ (4/5)</option>
                    <option value="3">★★★☆☆ (3/5)</option>
                    <option value="2">★★☆☆☆ (2/5)</option>
                    <option value="1">★☆☆☆☆ (1/5)</option>
                </select>
            </div>
            <!-- Message -->
            <div>
                <input type="text" class="form-control form-control-sm" id="txtCommentNew" placeholder="Viết nhận xét tại đây" rows="5" name="NoiDung">
            </div>
            <!-- Button -->
            <div>
                <button type="submit" class="btn btn-primary mb-0">Bình luận</button>
            </div>
            <br />
            <span style="color:green">@ViewBag.Message</span>

        </form>

    }






</div>
<!-- Review END -->
<!-- Student review START -->
<


<div id="div_allcomment">
    @foreach (var itemcomment in Model)
    {
        if (itemcomment.maBinhLuan != 0)
        {
            <div class="row">
                <!-- Review item START -->
                <div class="d-md-flex my-4">
                    <!-- Avatar -->
                    <div class="avatar avatar-xl me-4 flex-shrink-0">
                        <img class="avatar-img rounded-circle" src="/assets/client/images/avatar/09.jpg" alt="avatar" width="40">
                    </div>
                    <!-- Text -->
                    <div class="col-md-12">
                        <div class="d-sm-flex mt-1 mt-md-0 align-items-center">
                            <h5 class="me-3 mb-0">@itemcomment.maTaiKhoan</h5>
                            <!-- Review star -->
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>
                                @if (itemcomment.SaoBinhLuan >= 2)
                                {
                                    <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                }
                                else
                                {
                                    <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                }
                                @if (itemcomment.SaoBinhLuan >= 3)
                                {
                                    <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                }
                                else
                                {
                                    <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                }
                                @if (itemcomment.SaoBinhLuan >= 4)
                                {
                                    <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                }
                                else
                                {
                                    <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                }
                                @if (itemcomment.SaoBinhLuan >= 5)
                                {
                                    <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                }
                                else
                                {
                                    <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                }

                            </ul>
                        </div>
                        <!-- Info -->
                        <p class="small mb-2">@itemcomment.Ngay</p>
                        <div class="mt-2">
                            <p class="mb-2">@itemcomment.noiDung</p>
                            <div class="bg-white"></div>
                            <div class="d-flex flex-row">
                                <a class="accordion-collapse collapse show" href="#commmentreply-@itemcomment.maTaiKhoan" data-bs-toggle="collapse" aria-expanded="true" aria-controls="collapse-1">
                                    <i class="fas fa-reply me-2"></i>Reply
                                </a>
                            </div>

                        </div>
                     

                        <!-- Reply button -->

                       
                    </div>

                </div>
            </div>
        }
    }

</div>



