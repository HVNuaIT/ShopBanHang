@model IEnumerable<ShopBanHang.Models.NX>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div style=" text-align : center">
    @using (Html.BeginForm("Index", "NSXAdmin"))
    {
        <b>
            Tìm :
        </b>@Html.RadioButton("tim", "NSX")

        @Html.TextBox("search")<input type="submit" value="Search" />
    }
</div>

<h2>Danh Sách Nhà Sản Xuất</h2>

<p class="btn btn-warning">
    @Html.ActionLink("Thêm Mới", "Create")
</p>



    <table class="table table-bordered">
        <tr>
            <th>
             Tên Nhà Sản Xuất
            </th>
            <th style="width:60px;">
             Hình Ảnh
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNSX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhAnh)
                </td>
                <td class="btn-group">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.maNhaSanXuat }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.maNhaSanXuat }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.maNhaSanXuat })
                </td>
            </tr>
        }

    </table>
