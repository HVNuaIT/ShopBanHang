@model IEnumerable<ShopBanHang.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div style=" text-align : center">
    @using (Html.BeginForm("Index", "DanhMucAdmin"))
    {
        <b>
            Tìm :
        </b>@Html.RadioButton("tim", "DanhMuc")

        @Html.TextBox("search")<input type="submit" value="Search" />
    }
</div>
<h2>Danh Sách Danh Mục</h2>

<p class="btn btn-warning">
    @Html.ActionLink("Thêm Danh Mục ", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
           Tên Danh Mục
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenDanhMuc)
            </td>

            <td class="btn-group">
                @Html.ActionLink("Sửa", "Edit", new { id = item.maDanhMuc }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.maDanhMuc }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.maDanhMuc })
            </td>
        </tr>
    }

</table>
