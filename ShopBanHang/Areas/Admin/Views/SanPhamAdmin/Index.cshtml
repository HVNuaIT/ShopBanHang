
@model IEnumerable<ShopBanHang.Models.SanPham>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ShopBanHang.Models.Shop db = new ShopBanHang.Models.Shop();
}

<div style=" text-align : center">
    @using (Html.BeginForm("Index", "SanPhamAdmin"))
    {
        <b>
            Tìm :
        </b>@Html.RadioButton("tim", "NameProduct")

        @Html.TextBox("search")<input type="submit" value="Search" />
    }
</div>
<h2>Danh Sách Sản Phẩm</h2>
<p class="btn btn-warning">
    @Html.ActionLink("Thêm Sản Phẩm", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Mô Tả
        </th>
        <th>
            Đơn Gía
        </th>
        <th>
            Giảm Gía
        </th>
        <th>
            Tên Nhà Sản Xuất
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>


                @Html.DisplayFor(modelItem => item.maDanhMuc)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hinhAnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.moTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.donGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.giamGia)
            </td>
            <td>


                @Html.DisplayFor(modelItem => item.maNhaSanXuat)

            </td>

            <td class="btn-group" role="group">
                @Html.ActionLink("Sửa", "Edit", new { id = item.maSanPham }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.maSanPham }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.maSanPham })
            </td>
        </tr>
    }

</table>
